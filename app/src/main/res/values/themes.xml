<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/iran_yekan</item>
        <item name="android:fontFamily">@font/iran_yekan</item>
        <item name="snackbarStyle">@style/snackbar_style</item>
    </style>

    <style name="Theme.GithubTest" parent="Base.Theme.GithubTest" />

    <style name="bottom_navigation_style_active_indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/theme_yellow_dark</item>
        <item name="android:width">48dp</item>
        <item name="android:height">28dp</item>
        <item name="marginHorizontal">4dp</item>
    </style>

    <style name="bottom_navigation_style_item_text_active">
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="bottom_navigation_style_item_text_inactive">
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="snackbar_style" parent="Widget.Material3.Snackbar">
        <item name="android:layoutDirection">rtl</item>
    </style>

</resources>